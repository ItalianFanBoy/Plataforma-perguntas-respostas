<%- include('./partials/header') %>

<body>
    <%- include('./partials/navbar') %>
    <div class="container">
        <hr>
        <h1> <%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label>Resposta:</label>
            <textarea name="corpo" id="" cols="15" rows="4" placeholder="Digite sua resposta" class="form-control"></textarea>
            <br>
            <input type="hidden" name="pergunta" id="" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary"> Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta =>{ %>
               <div class="card">
                    <div class="card-body">
                        <p> <%= resposta.corpo %> </p>
                    </div>
               </div>
            <% }) %>
    </div>


</body>

<%- include('./partials/footer') %>